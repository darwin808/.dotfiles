{
  "editor.minimap.enabled": false,
  "editor.scrollbar.horizontal": "hidden",
  "editor.folding": false,
  "editor.glyphMargin": true,
  "editor.scrollbar.vertical": "hidden",
  "editor.codeActionsOnSave": {
    "source.fixAll": true,
    "source.organizeImports": true
  },
  "eslint.workingDirectories": [{ "mode": "auto" }],
  "workbench.sideBar.location": "right",
  "vim.leader": "<space>",
  "vscode_custom_css.imports": [""],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "w"],
      "commands": ["workbench.action.splitEditor"]
    },
    {
      "before": ["<leader>", "e"],
      "commands": ["workbench.action.toggleSidebarVisibility"]
    },
    {
      "before": ["<leader>", "f"],
      "commands": ["workbench.action.quickOpen"]
    },
    {
      "before": ["<leader>", "h"],
      "after": ["_"]
    },
    {
      "before": ["<leader>", "l"],
      "after": ["$"]
    }
  ],
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "k"],
      "after": ["<Esc>"]
    }
  ],
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  // "editor.fontFamily": "Source Code Pro for Powerline",
  // "editor.fontFamily": "MesloLGS NF",
  "editor.fontFamily": "Fira Code",
  "editor.fontLigatures": true,
  "editor.codeLensFontFamily": "'Fira Code'",
  "terminal.explorerKind": "external",
  "terminal.external.linuxExec": "kitty",
  "breadcrumbs.enabled": false,
  "editor.renderWhitespace": "none",
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "plaintext": "pug"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "eslint.validate": ["typescript", "typescriptreact"],
  "search.exclude": {
    "**/.git": true,
    "**/node_modules": true,
    "**/build": true,
    "**/bower_components": true,
    "**/tmp": true,
    "yarn.lock": true,
    "package.json": true,
    "package.lock.json": true,
    ".es*": true,
    ".git*": true,
    ".pre*": true,
    ".vs*": true
  },
  "workbench.startupEditor": "none",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "workbench.editor.enablePreview": false,
  "ponicode.token": "757168b5-9355-463e-8ce4-e7044a2bc1f9",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "editor.lineNumbers": "relative",
  "editor.cursorSurroundingLines": 6,
  "editor.cursorBlinking": "solid",
  "editor.cursorStyle": "block",
  "editor.renderLineHighlight": "none",
  "workbench.colorCustomizations": {
    // "editor.background": "#22272E",
    // "editorGutter.background": "#22272E",
    "editorLineNumber.activeForeground": "#656565",
    "editorLineNumber.foreground": "#F6A519",
    // "editor.selectionBackground": "#135564",
    "editor.selectionHighlightBackground": "#135564",
    // "editorCursor.foreground": "#F6a519",
    "terminalCursor.foreground": "#FFF",
    "statusBar.background": "#333333",
    "statusBar.foreground": "#F6A519",
    // "statusBar.noFolderBackground": "#212121",
    "statusBar.debuggingBackground": "#263238"
  },
  "editor.renderIndentGuides": false,
  "terminal.integrated.fontFamily": "MesloLGS NF",
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,
  "window.menuBarVisibility": "hidden",
  "window.zoomLevel": 3,
  "workbench.iconTheme": "vs-seti",
  "workbench.colorTheme": "Bear Theme",
  "workbench.activityBar.visible": false
}
