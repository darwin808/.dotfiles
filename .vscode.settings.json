{
  "editor.minimap.enabled": false,
  "editor.scrollbar.horizontal": "hidden",
  "editor.folding": true,
  "editor.glyphMargin": false,
  "editor.scrollbar.vertical": "hidden",
  "breadcrumbs.enabled": false,

  // "editor.codeActionsOnSave": {
  //   "source.fixAll": true,
  //   "source.organizeImports": true
  // },
  "eslint.workingDirectories": [{ "mode": "auto" }],
  "workbench.sideBar.location": "right",
  "vim.leader": "<space>",
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "w"],
      "commands": ["workbench.action.splitEditor"]
    },
    {
      "before": ["<leader>", "s"],
      "commands": ["workbench.action.file.save"]
    },
    {
      "before": ["<leader>", "e"],
      "commands": ["workbench.action.toggleSidebarVisibility"]
    },
    {
      "before": ["<leader>", "f"],
      "commands": ["workbench.action.quickOpen"]
    },
    {
      "before": ["<leader>", "h"],
      "after": ["_"]
    },
    {
      "before": ["<leader>", "l"],
      "after": ["$"]
    }
  ],
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "k"],
      "after": ["<Esc>"]
    }
  ],
  "[javascript]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  // "editor.fontFamily": "Source Code Pro for Powerline",
  // "editor.fontFamily": "MesloLGS NF",
  // "editor.fontFamily": "Fira Code",
  "editor.fontFamily": "jetBrains Mono",
  "editor.fontLigatures": true,
  "editor.codeLensFontFamily": "'Fira Code'",
  "terminal.explorerKind": "external",
  "terminal.external.linuxExec": "kitty",
  "editor.renderWhitespace": "none",
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "plaintext": "pug"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "eslint.validate": ["typescript", "typescriptreact"],
  "search.exclude": {
    "**/.git": true,
    "**/node_modules": true,
    "**/build": true,
    "**/bower_components": true,
    "**/tmp": true,
    "yarn.lock": true,
    "package.json": true,
    "package.lock.json": true,
    ".es*": true,
    ".git*": true,
    ".pre*": true,
    ".vs*": true
  },
  "workbench.startupEditor": "none",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "ponicode.token": "757168b5-9355-463e-8ce4-e7044a2bc1f9",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "editor.lineNumbers": "relative",
  "editor.cursorSurroundingLines": 6,
  "editor.cursorBlinking": "solid",
  "editor.cursorStyle": "block",
  "editor.renderLineHighlight": "none",
  "workbench.colorCustomizations": {
    // "editor.background": "#282828",
    // "editorGutter.background": "#22272E",
    "editorLineNumber.activeForeground": "#fe8019",
    // "editorLineNumber.foreground": "#D65D0E",
    // "editor.selectionBackground": "#666727",
    "editor.selectionForeground": "#333333",
    // "editor.selectionHighlightBackground": "#fb4934",
    "editorCursor.foreground": "#FB4934",
    "editorCursor.background": "#222222",
    "terminalCursor.foreground": "#fe8019"
    // "statusBar.background": "#333333",
    // "statusBar.foreground": "#FE8019",
    // "statusBar.noFolderBackground": "#212121",
    // "statusBar.debuggingBackground": "#263238"
  },
  "editor.renderIndentGuides": false,
  "terminal.integrated.fontFamily": "MesloLGS NF",
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,
  "workbench.iconTheme": "vs-seti",
  "redhat.telemetry.enabled": false,
  "go.toolsManagement.autoUpdate": true,
  "[go]": {
    "editor.defaultFormatter": "golang.go"
  },
  "quokka.compactMessageOutput": true,
  "quokka.automaticRestart": true,
  "thunder-client.codeSnippetLanguage": "cs-httpclient",
  "bracket-pair-colorizer-2.depreciation-notice": false,
  "window.menuBarVisibility": "toggle",
  "window.zoomLevel": 2,
  "workbench.colorTheme": "Bear Theme"
}
